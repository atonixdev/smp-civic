# Environment Configuration for SMP Civic Platform
# Copy this file to .env and configure your local settings

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (never set to True in production)
DEBUG=True

# Secret key for Django (generate a new one for production)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# PostgreSQL configuration
DB_NAME=smp_civic
DB_USER=smp_user
DB_PASSWORD=smp_password
DB_HOST=db
DB_PORT=5432

# Database URL (alternative to individual settings)
DATABASE_URL=postgresql://smp_user:smp_password@db:5432/smp_civic

# =============================================================================
# REDIS SETTINGS (for caching and sessions)
# =============================================================================

REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=7

# Encryption settings
ENCRYPTION_KEY=your-encryption-key-here-32-bytes-minimum
FERNET_KEY=your-fernet-key-here

# Post-quantum cryptography settings
PQC_ENABLED=True
KYBER_VARIANT=kyber768
DILITHIUM_VARIANT=dilithium3

# =============================================================================
# EMAIL SETTINGS
# =============================================================================

# Email backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password

# Default email addresses
DEFAULT_FROM_EMAIL=noreply@smpcivic.org
ADMIN_EMAIL=admin@smpcivic.org
SECURITY_EMAIL=security@smpcivic.org

# =============================================================================
# STORAGE SETTINGS
# =============================================================================

# Media files
MEDIA_ROOT=/app/media
MEDIA_URL=/media/

# Static files
STATIC_ROOT=/app/static
STATIC_URL=/static/

# File upload settings
MAX_UPLOAD_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md,jpg,jpeg,png,gif

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# AWS S3 (for production file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=smp-civic-media
AWS_S3_REGION_NAME=us-east-1

# Monitoring and logging
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO

# Analytics
ANALYTICS_ENABLED=True
GOOGLE_ANALYTICS_ID=your-ga-id

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
ENABLE_QUANTUM_CRYPTO=True
ENABLE_WHISTLEBLOWER_MODE=True
ENABLE_LEGAL_TEMPLATES=True
ENABLE_GIT_INTEGRATION=True

# =============================================================================
# API SETTINGS
# =============================================================================

# API rate limiting
API_RATE_LIMIT=1000/hour
API_BURST_LIMIT=100/minute

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# FRONTEND SETTINGS
# =============================================================================

# React app configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_ENVIRONMENT=development

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development-specific settings
DEVELOPMENT_MODE=True
MOCK_EXTERNAL_SERVICES=True
SEED_DATABASE=True

# Testing
TEST_DATABASE_NAME=test_smp_civic
PYTEST_WORKERS=4

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Security headers configuration
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# =============================================================================
# LOGGING
# =============================================================================

# Logging configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/smp-civic.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# CELERY SETTINGS (for background tasks)
# =============================================================================

CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC